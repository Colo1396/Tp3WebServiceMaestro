<!-- Contenido de la página -->
<main class="flex-shrink-0">
  <div class="container">

    <div class="container p-3">
          <div class="row">
            <div class="col-12 mx-auto">
              <div class="card">
                <div class="card-header text-white bg-info">
                    NUEVO PRODUCTO
                </div>
                <div class="card-body">
        
        <form action="/productos/nuevoPost" method="post" class="form" style="margin-top:130px;">
            <!--Nombre-->
            <div class="input-group">
                <input type="text" name="nombre" id="nombre" required>
                <label for="nombre">Nombre</label>
            </div>
            <!--Descripcion-->
            <div class="input-group">
                <input type="text" name="descripcion" id="descripcion" required>
                <label for="descripcion">Descripcion</label>
            </div>
            <!--IMAGEN-->
            <div class="input-group">
                <input type="text" name="imagen" id="imagen" required>
                <label for="imagen">IMAGEN</label>
            </div>
            <!--Precio-->
            <div class="input-group">
                <input type="text" name="precio" id="precio" required>
                <label for="precio">Precio </label>
            </div>
            <!--STOCK-->
            <div class="input-group">
                <input type="text" name="stock" id="stock" required>
                <label for="stock">Stock</label>
            </div>
            <!--MEDIO DE PAGO-->
            <div class="input-group">
                <select class="form-select" aria-label="Default select example" name="medioDePagoId">
                {{#each mediosDepago}}
                    <option value= {{id}} >{{nombre}}</option>
                {{/each}}
                </select>
            </div>
            
            <!-- BOtON  -->
            <div class="btn-group" style="margin-top:55px; display: flex; justify-content: center;">
                <div class="col-6">
                    <button type="submit" id="btn_register" class="register-btn">Registrarse
                    </button>
                </div>
            </div>
            <div align="center">
                <a class="btn btn-link" href="/login">Página de inicio de sesión</a>
            </div>
        </form>
          </div>
</div>
       
        </div>
    </div>
        </div>
</div>
