{
    "openapi": "3.0.3",
    "info": {
      "title": "Modulo de Mesa de Ayuda API",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://localhost:8082",
        "description": "Servidor local"
      }
    ],
    "paths": {
      "/loginPost": {
        "post": {
          "tags": [
            "Users"
          ],
          "summary": "Devuelve el token de autorizacion",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "username": {
                      "type": "string",
                      "description": "Username del usuario"
                    },
                    "password": {
                      "type": "string",
                      "description": "Password del usuario"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Informacion del usuario",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "description": "ID dependiendo del tipo de usuario"
                      },
                      "auth_token": {
                        "type": "string",
                        "description": "Token de autorizacion para el usuario"
                      },
                      "username": {
                        "type": "string",
                        "description": "Username del usuario"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/registerPost": {
        "post": {
          "tags": [
            "Users"
          ],
          "summary": "Devuelve el usuario creado",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "username":{
                      "type": "string",
                      "description": "Nombre para la cuenta del usuario"
                    },
                    "password":{
                      "type": "string",
                      "description": "Contrase√±a elegida por el usuario para su cuenta"
                    },
                    "rolId":{
                      "type": "integer",
                      "description": "Rol elegido para la cuenta del usuario (Comprador, Vendedor)"
                    },
                    "nombre":{
                      "type": "string",
                      "description": "Nombre del usuario"
                    },
                    "apellido":{
                      "type": "string",
                      "description": "Apellido del usuario"
                    },
                    "dni":{
                      "type": "integer",
                      "description": "DNI del usuario"
                    },
                    "telefono":{
                      "type": "integer",
                      "description": "Telefono del usuario"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Informacion del usuario",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      },
      "/denuncias/nuevaPost": {
        "post": {
          "tags": [
            "Denuncias"
          ],
          "summary": "Crea una denuncia",
          "parameters": [
              {
                "name": "auth_token",
                "in": "header",
                "required": true,
                "description": "Token de autorizacion",
                "schema": {
                  "type": "string"
                }
              }
          ],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "categoria":{
                      "type": "string",
                      "description": "Categoria de la denuncia a crear"
                    },
                    "comentario":{
                      "type": "string",
                      "description": "Comentario de la denuncia a crear"
                    },
                    "productoId":{
                      "type": "integer",
                      "description": "ID del producto al cual se le realizar la denuncia"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Iformacion de la denuncia",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Denuncia"
                  }
                }
              }
            }
          }
        }
      },

      "/denuncias/lista": {
        "get": {
          "tags": [
            "Denuncias"
          ],
          "parameters": [
            {
              "name": "auth_token",
              "in": "header",
              "required": true,
              "description": "Token de autorizacion",
              "schema": {
                "type": "string"
              }
            }
          ],
          "summary": "Trae todos las denuncias",
          "responses": {
            "200": {
              "description": "Lista de denuncias",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Denuncia"
                    }
                  }
                }
              }
            }
          }
        }
    },
    "/denuncias/listaPorEstado": {
        "post": {
          "tags": [
            "Denuncias"
          ],
          "summary": "Devuelve un listado filtrado de las denuncias por su estado",
          "parameters": [
            {
              "name": "auth_token",
              "in": "header",
              "required": true,
              "description": "Token de autorizacion",
              "schema": {
                "type": "string"
              }
            }
          ],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "estado":{
                      "type": "string",
                      "description": "Estado por el cual se filtraran las denuncias"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": 
            {
                "description": "Lista de denuncias filtradas",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Denuncia"
                      }
                    }
                  }
                }
              }
          }
        }
      },
      "/denuncias/aceptar/{id}": {
        "post": {
          "tags": [
            "Denuncias"
          ],
          "summary": "Actualiza una denuncias dandola por resuelta",
          "parameters": [
            {
              "name": "auth_token",
              "in": "header",
              "required": true,
              "description": "Token de autorizacion",
              "schema": {
                "type": "string"
              }
            },
            {
                "name": "id",
                "in": "path",
                "required": true,
                "description": "ID de la denuncia a aceptar",
                "schema": {
                  "type": "integer"
                }
            }
          ],
          "responses": {
            "200": {
              "description": "La denuncia fue aceptada cambiandole su estado a : 'resuelto' ",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "description": "Mensaje que informa el estado del endpoint"
                      },
                      "denunciaAceptada": {
                        "type": "object",
                        "description": "Informacion de la denuncia que ha sido aceptada"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/denuncias/rechazar/{id}": {
        "post": {
          "tags": [
            "Denuncias"
          ],
          "summary": "Rechaza una denuncia dandole de baja",
          "parameters": [
            {
              "name": "auth_token",
              "in": "header",
              "required": true,
              "description": "Token de autorizacion",
              "schema": {
                "type": "string"
              }
            },
            {
                "name": "id",
                "in": "path",
                "required": true,
                "description": "ID de la denuncia a rechazar/eliminar",
                "schema": {
                  "type": "integer"
                }
            }
          ],
          "responses": {
            "200": {
              "description": "La denuncia fue rechazada, siendo dada de baja de la BD ",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message":{
                        "type": "string",
                        "description": "Mensaje indicando el estado del enpoint"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/reclamos/nuevoPost": {
        "post": {
          "tags": [
            "Reclamos"
          ],
          "summary": "Crea un reclamo",
          "parameters": [
              {
                "name": "auth_token",
                "in": "header",
                "required": true,
                "description": "Token de autorizacion",
                "schema": {
                  "type": "string"
                }
              }
          ],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "compraId":{
                      "type": "integer",
                      "description": "ID de la compra a la cual se le realizara el reclamo"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Iformacion del reclamo",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Reclamo"
                  }
                }
              }
            }
          }
        }
      },
      "/reclamos/lista": {
        "get": {
          "tags": [
            "Reclamos"
          ],
          "summary": "Trae todos los reclamos",
                    "parameters": [
            {
              "name": "auth_token",
              "in": "header",
              "required": true,
              "description": "Token de autorizacion",
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": 
            {
              "description": "Lista de reclamos",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Reclamo"
                    }
                  }
                }
              }
            }
          }
        }
    },
    "/reclamos/listaPorEstado": {
        "post": {
          "tags": [
            "Reclamos"
          ],
          "summary": "Devuelve un listado filtrado de los reclamos por su estado",
          "parameters": [
            {
              "name": "auth_token",
              "in": "header",
              "required": true,
              "description": "Token de autorizacion",
              "schema": {
                "type": "string"
              }
            }
          ],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "estado":{
                      "type": "string",
                      "description": "Estado por el cual se filtraran los reclamos"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": 
            {
                "description": "Lista de reclamos filtrados",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Reclamo"
                      }
                    }
                  }
                }
              }
          }
        }
