{{> navIndex}}
<body>
    <div class="login-wrapper row">
        <form action="/register" method="post" class="form" style="margin-top:50px; padding-top: 30px;">
            <img src="/img/user2.png" alt="">
            <h2>Registrarse</h2>
            <div class="row">
                <div class="col-md-6">
                    <!--NOMBRE-->
                    <div class="input-group">
                        <input type="text" name="nombre" id="nombre" required>
                        <label for="nombre">Nombre</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <!--APELLIDO-->
                    <div class="input-group">
                        <input type="text" name="apellido" id="apellido" required>
                        <label for="apellido">Apellido</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <!--USERNAME-->
                    <div class="input-group">
                        <input type="text" name="username" id="username" required>
                        <label for="username">Nombre de usuario </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <!--CONTRASEÑA-->
                    <div class="input-group">
                        <input type="password" name="password" id="password" required>
                        <label for="password">Contraseña</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <!-- DNI -->
                    <div class="input-group">
                        <input type="text" name="dni" id="dni" required>
                        <label for="dni">Nombre de usuario </label>
                    </div>
                </div>
            </div>
            
            <!-- BOTON  -->
            <div align="center" class="row">
                <div class="col-6">
                    <a href="/" id="btn_cancelar" class="btn cancelar-btn" style="text-decoration:none">Cancelar</a>
                </div>
                <div class="col-6">
                    <button type="submit" id="btn_register" class="register-btn">Registrarse
                    </button>
                </div>
            </div>
            <div align="center">
                <a class="btn btn-link" href="#">Página de inicio de sesión</a>
            </div>
        </form>
    </div>
    {{> footer}}
</body>